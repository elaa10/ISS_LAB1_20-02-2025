<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ro.iss2025.controllers.LoginController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
        <Label text="LOGIN" style="-fx-font-size: 24px;"/>

        <TextField fx:id="idField" promptText="ID"/>
        <PasswordField fx:id="passwordField" promptText="Parola"/>

        <Button text="LOGIN" fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: pink;"/>

        <Button text="Nu ai încă cont? Înregistrează-te!"
                onAction="#handleOpenRegister"
                style="-fx-background-color: transparent; -fx-underline: true; -fx-text-fill: blue;"/>
    </VBox>
</AnchorPane>
